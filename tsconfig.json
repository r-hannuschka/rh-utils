{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "removeComments": false,                 
    "noUnusedLocals": true,                
    "noUnusedParameters": false,           
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false, 
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}