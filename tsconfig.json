{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDirs": [
      "./src"
    ],
    "removeComments": false,                 
    "noUnusedLocals": true,                
    "noUnusedParameters": false,           
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false, 
    "moduleResolution": "node",
    "sourceMap": false,
    "typeRoots": [
      "./node_modules/rh-utils/lib",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
